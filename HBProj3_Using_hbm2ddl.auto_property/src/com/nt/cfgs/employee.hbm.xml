<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 
<hibernate-mapping>
    <class name="com.nt.domain.EmpDetails" table="Emp"  >

	<id name="no"
		column="EID"/>
	
	<property name="fname" column="FIRSTNAME" length="15" type="string"  not-null="true" />
	
	<property name="lname" column="LASTNAME" length="15" type="string"  not-null="true" />

	<property name="mail" column="EMAIL" length="15" type="string"  not-null="true" />

</class> 
</hibernate-mapping>
